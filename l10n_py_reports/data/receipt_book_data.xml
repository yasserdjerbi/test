        <!-- generar las secuencias para los dos tipos de recibo -->
        <record id="automatic_receipt_sequence_rc" model="ir.sequence">
            <field name="name">Recibo Automatico Credito 001 001</field>
            <field name="code">RACR</field>
            <field name="implementation">no_gap</field>
            <field name="padding">7</field>
            <field name="prefix">RC-001-001-</field>
        </record>
        <record id="automatic_receipt_sequence_cc" model="ir.sequence">
            <field name="name">Recibo Automatico Contado 001 001</field>
            <field name="code">RACO</field>
            <field name="implementation">no_gap</field>
            <field name="padding">7</field>
            <field name="prefix">CC-001-001-</field>
        </record>
        <record id="automatic_receipt_sequence_purchase" model="ir.sequence">
            <field name="name">Recibo compras</field>
            <field name="code">RCOM</field>
            <field name="implementation">no_gap</field>
            <field name="padding">7</field>
            <field name="prefix">CP-</field>
        </record>

        <!-- VENTAS TALONARIO DE RECIBOS -->
        <record id="automatic_sale_cc_receipt" model="report.receiptbook">
            <field name="name">RECIBO DE DINERO CONTADO</field>
            <field name="partner_type">customer</field>
            <field name="sequence_id" ref="l10n_py_reports.automatic_receipt_sequence_cc"/>
            <field name="sequence">10</field>
        </record>

        <record id="automatic_sale_rc_receipt" model="report.receiptbook">
            <field name="name">RECIBO DE DINERO</field>
            <field name="partner_type">customer</field>
            <field name="sequence_id" ref="l10n_py_reports.automatic_receipt_sequence_rc"/>
            <field name="sequence">20</field>
        </record>

        <!-- Generar los talonarios de recibo para compras -->
        <record id="automatic_purchase_receipt" model="report.receiptbook">
            <field name="name">Recibo Automatico compras</field>
            <field name="partner_type">supplier</field>
            <field name="sequence_id" ref="l10n_py_reports.automatic_receipt_sequence_purchase"/>
