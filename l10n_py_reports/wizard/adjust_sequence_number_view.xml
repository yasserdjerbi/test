<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="adjust_sequence_number_view_form" model="ir.ui.view">
        <field name="name">L10N PY REPORTS adjust sequence number wizard</field>
        <field name="model">adjust.sequence.number</field>
        <field name="arch" type="xml">
            <form string="adjust_sequence_number_form">
                <sheet>
                    <group>
                        <field name="next_number"/>
                        <field name="sequence_id"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Apply new next number" name="do_change" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="adjust_sequence_number_action" model="ir.actions.act_window">
        <field name="name">Adjust next number</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">adjust.sequence.number</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
