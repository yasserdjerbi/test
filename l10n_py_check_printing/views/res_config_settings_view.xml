<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- desocultar la cuenta para cheques -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">L10NPY CHECK PRINTING mostrar cuenta de cheques</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_check.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='content-group']" position="inside">
                <div class="row mt16">
                    <label for="holding_check_account_id" class="col-md-3 o_light_label"/>
                    <field name="holding_check_account_id"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
